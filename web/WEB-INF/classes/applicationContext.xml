                  </value>
                </property>
              </bean>
            </array>
          </property> 
     </bean> 
     <bean class="org.mybatis.spring.mapper.MapperScannerConfigurer">
     <property name="basePackage" value="com.smxy.mapper"></property>
     </bean>
    <bean id="springContextUtil" class="com.smxy.util.SpringContextUtil"></bean>
    <bean id="myInterceptor" class="com.smxy.interceptor.MyInterceptor"></bean>
